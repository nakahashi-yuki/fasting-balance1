<div class="log">
    
  <div class="log-date">
    <!-- 記録した時刻を出力する -->
    <%= fasting.created_at.to_s(:datetime_jp) %>
  </div>

  <div class="log-content">

    <!-- 記録内容を記述する -->
    <span class='weight'>体重:</span><%= fasting.body_weight %>kg

    <span class='fitness'>運動:</span><%= fasting.motion.name %>

    <% unless fasting.motion_id == 2 %>
      を<%= fasting.motion_time.name %>！
    <% end %>
  </div>

</div>
